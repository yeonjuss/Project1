<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpActivity2">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/login2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AB5858"
        app:navigationIcon="@drawable/ic_action_back"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_team"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/login2_toolbar">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="소속팀"
            android:textSize="13sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화이트"
        android:layout_below="@id/input_team"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="50dp"/>

    <RadioButton
        android:id="@+id/rb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_team"
        android:layout_toRightOf="@+id/tv_white"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="45dp"/>

    <TextView
        android:id="@+id/tv_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블루"
        android:layout_below="@id/tv_white"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="30dp"/>

    <RadioButton
        android:id="@+id/rb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb1"
        android:layout_toRightOf="@+id/tv_blue"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="58dp"/>





</RelativeLayout>